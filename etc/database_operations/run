#!/bin/sh
# -----------------------------------------------------------------------------
#
#   Runs sql scripts to update database from previous release.
#
# -----------------------------------------------------------------------------
#

DB=$1
USER=$2

echo Using database: $DB
echo Enter password for $USER:
read -s password

function execute() {
	echo ---------------------------------------- $1
	mysql -u$USER -f -p$password $DB < $2
	echo
}

execute "Alter Table Research Interest to support MLS" alterTableResearchInterest.sql
execute "Fix StudentCurricularPlan Table" fixStudentCurricularPlanTable.sql
execute "Fix ExecutionYear Table" fixExecutionYearTable.sql
