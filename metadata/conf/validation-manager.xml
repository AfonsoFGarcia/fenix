        <arg0 key="message.initialDate" resource="true" />
        <var>
           <var-name>datePattern</var-name>
           <var-value>dd/MM/yyyy</var-value>
        </var>
        <var>
           <var-name>mask</var-name>
           <var-value>^((.||..)/(.||..)/....)$</var-value>
        </var>
      </field>
      <field property="endDateToExportDataFrom" depends="mask,date" page="1">
