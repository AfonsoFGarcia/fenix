<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
      "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    
    <!-- ========== Data Source Configuration =============================== -->

    
    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans type="org.apache.struts.action.ActionFormBean">
		

     </form-beans>
    
    <!-- ========== Global Exception Definitions ============================== -->
	<global-exceptions>
        <exception
			type="java.lang.Exception"
			key="error.Exception"
            handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
		<exception
			type="net.sourceforge.fenixedu.applicationTier.Servico.exceptions.NotAuthorizedException"
			key="error.NotAuthorized"
			handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
	</global-exceptions>
    
    <!-- ========== Global Forward Definitions =============================== -->
    <global-forwards type="org.apache.struts.action.ActionForward">
      <forward name="home" path="/mainPortalPage.jsp" redirect="true" contextRelative="true"/>
      <forward name="logoff" path="/logoff.do" contextRelative="true"/>
      <forward name="redirect" path="/redirect.do" contextRelative="true"/>
      <forward name="globalOutOfPeriod" path="definition.out.of.period"/>              
    </global-forwards>
    
    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">
      <!-- page fronting actions -->
      <action path="/index" type="net.sourceforge.fenixedu.presentationTier.Action.webSiteManager.ListSitesAction">
        <forward name="list"  path="website-index"/>
      </action>

      <action path="/manageInstitutionSite" type="net.sourceforge.fenixedu.presentationTier.Action.commons.VoidAction">
        <forward name="Success" path="announcementsManagement.do?method=start" redirect="true"/>
      </action>

	  <action path="/manageResearchUnitSite" 
	  type="net.sourceforge.fenixedu.presentationTier.Action.webSiteManager.ResearchUnitSiteManagementDA"
	  parameter="method">
	  	<forward name="addManager" path="add-manager-to-research-site"/>
	  	<forward name="editResearchSite" path="edit-research-site"/>
        <forward name="createSection" path="manage-researchSite-createSection"/>
        <forward name="sectionsManagement" path="manage-researchSite-sectionsManagement"/>
        <forward name="section" path="manage-researchSite-section"/>
        <forward name="editSection" path="manage-researchSite-editSection"/>
        <forward name="createItem" path="manage-researchSite-createItem"/>
        <forward name="editItem" path="manage-researchSite-editItem"/>
        <forward name="uploadFile" path="manage-researchSite-uploadFile"/>
        <forward name="editFile" path="manage-researchSite-editFile"/>          
        <forward name="organizeItems" path="manage-researchSite-organizeItems"/>
        <forward name="organizeFiles" path="manage-researchSite-organizeFiles"/>
        <forward name="confirmSectionDelete" path="manage-researchSite-confirmSectionDelete"/>
        <forward name="editSectionPermissions" path="manage-researchSite-editSectionPermissions"/>
        <forward name="editItemPermissions" path="manage-researchSite-editItemPermissions"/>
        <forward name="editFile" path="manage-researchSite-editFile"/>
        <forward name="editIntroduction" path="researchSite-edit-introduction"/>
        <forward name="editConfiguration" path="researchSite-edit-configuration"/>
        <forward name="editLogo" path="researchSite-edit-logo"/>
        <forward name="editBanners" path="researchSite-edit-banners"/>
        <forward name="editSideBanner" path="researchSite-edit-side-banner"/>
        <forward name="editTopNavigation" path="researchSite-edit-top-navigation"/>
        <forward name="editFooterNavigation" path="researchSite-edit-footer-navigation"/>
        <forward name="organizeTopLinks" path="researchSite-edit-organizeTopLinks"/>
        <forward name="organizeFooterLinks" path="researchSite-edit-organizeFooterLinks"/>
        <forward name="managePeople" path="researchSite-manage-people"/>
        <forward name="externalPersonExtraInfo" path="researchSite-external-person-extra-info"/>
        <forward name="editContract" path="researchSite-edit-contract"/>
        <forward name="chooseIntroductionSections" path="researchSite-chooseIntroductionSections"/>
        <forward name="addInstitutionSection" path="researchSite-addInstitutionSection"/>
        <forward name="functionalitySection" path="researchSite-functionalitySection"/>
        <forward name="editFunctionalitySection" path="researchSite-editFunctionalitySection"/>
	  </action>
	  
	  <action path="/manageResearchUnitAnnouncements"
	   type="net.sourceforge.fenixedu.presentationTier.Action.webSiteManager.ManageResearchUnitAnnouncementsDA"
	   parameter="method">
	   	  	<forward name="noBoards" path="research-site-no-boards"/>
            <forward name="listAnnouncementBoards" path="research-announcements-list-boards"/>
            <forward name="listAnnouncements" path="research-announcements-list-announcements"/>
            <forward name="add" path="research-announcements-add-announcement"/>
            <forward name="edit" path="research-announcements-edit-announcement"/>
            <forward name="viewAnnouncement" path="research-announcements-view-announcement"/>
      </action>
		
	<action path="/announcementsManagement"
              type="net.sourceforge.fenixedu.presentationTier.Action.webSiteManager.WebSiteAnnouncementManagement"
              parameter="method"
              validate="true"
              scope="request"
              >
          <forward name="add"  path="websiteManager-add-announcement"/>
          <forward name="edit" path="websiteManager-edit-announcement"/>
          <forward name="listAnnouncementBoards" path="websiteManager-list-announcement-boards"/>
		  <forward name="listAnnouncements" path="websiteManager-list-announcements"/>
          <forward name="unitStructuredBoards" path="unit-structured-boards"/>
          <forward name="viewAnnouncementBoard" path="websiteManager-view-announcementBoard"/>
   		  <forward name="viewAnnouncement" path="websiteManager-view-announcement"/>
      </action>


    <action path="/manageDepartmentSite" parameter="method" type="net.sourceforge.fenixedu.presentationTier.Action.webSiteManager.DepartmentSiteManagementDA">
        <forward name="start" path="departmentSite-start"/>
        <forward name="editIntroduction" path="departmentSite-edit-introduction"/>
        <forward name="editConfiguration" path="departmentSite-edit-configuration"/>
        <forward name="editSideBanner" path="departmentSite-edit-side-banner"/>
        <forward name="editLogo" path="departmentSite-edit-logo"/>
        <forward name="editBanners" path="departmentSite-edit-banners"/>
        <forward name="editTopNavigation" path="departmentSite-edit-top-navigation"/>
        <forward name="editFooterNavigation" path="departmentSite-edit-footer-navigation"/>
        <forward name="organizeTopLinks" path="departmentSite-edit-organizeTopLinks"/>
        <forward name="organizeFooterLinks" path="departmentSite-edit-organizeFooterLinks"/>
        <forward name="createSection" path="departmentSite-createSection"/>
        <forward name="sectionsManagement" path="departmentSite-sectionsManagement"/>
        <forward name="section" path="departmentSite-section"/>
        <forward name="editSection" path="departmentSite-editSection"/>
        <forward name="createItem" path="departmentSite-createItem"/>
        <forward name="editItem" path="departmentSite-editItem"/>
        <forward name="uploadFile" path="departmentSite-uploadFile"/>
        <forward name="editFile" path="departmentSite-editFile"/>          
        <forward name="organizeItems" path="departmentSite-organizeItems"/>
        <forward name="organizeFiles" path="departmentSite-organizeFiles"/>
        <forward name="confirmSectionDelete" path="departmentSite-confirmSectionDelete"/>
        <forward name="editSectionPermissions" path="departmentSite-editSectionPermissions"/>
        <forward name="editItemPermissions" path="departmentSite-editItemPermissions"/>
        <forward name="editFile" path="departmentSite-editFile"/>
        <forward name="chooseIntroductionSections" path="departmentSite-chooseIntroductionSections"/>
        <!-- xxxxx -->
        <forward name="addInstitutionSection" path="departmentSite-addInstitutionSection"/>
        <forward name="functionalitySection" path="departmentSite-functionalitySection"/>
        <forward name="editFunctionalitySection" path="departmentSite-editFunctionalitySection"/>
    </action>

    <action path="/manageDepartmentSiteAnnouncements"
            parameter="method"
            type="net.sourceforge.fenixedu.presentationTier.Action.webSiteManager.AnnouncementsDA"
            scope="request">
        <forward name="noBoards" path="department-announcements-no-boards"/>
        <forward name="viewAnnouncementsRedirect" path="/manageDepartmentSiteAnnouncements.do?method=viewAnnouncements&amp;tabularVersion=true"/>
        <forward name="listAnnouncementBoards" path="department-announcements-list-boards"/>
        <forward name="listAnnouncements" path="department-announcements-list-announcements"/>
        <forward name="add" path="department-announcements-add-announcement"/>
        <forward name="viewAnnouncement" path="department-announcements-view-announcement"/>
        <forward name="edit" path="department-announcements-edit-announcement"/>
    </action>
    
     <action path="/manageUnitAnnouncementBoard"
        type="net.sourceforge.fenixedu.presentationTier.Action.webSiteManager.ManagerAnnouncementForwardAction"
		/>
            
    </action-mappings>

    <!-- ========== Controller Configuration ================================ -->
	  <controller processorClass="net.sourceforge.fenixedu.presentationTier.processor.FenixRequestProcessorWithTiles"/>
	     
    <!-- ========== Message Resources Definitions ============================ -->
    <message-resources parameter="resources.ApplicationResources" key="DEFAULT" null="false"/>
    <message-resources parameter="resources.SiteResources" key="SITE_RESOURCES" null="false"/>    
    <message-resources parameter="resources.MessagingResources" key="MESSAGING_RESOURCES" null="false"/>	
	<message-resources parameter="resources.WebsiteManagerResources" key="WEBSITEMANAGER_RESOURCES" null="false"/>
    <message-resources parameter="resources.ApplicationResources" key="DEFAULT" null="false"/>
	<message-resources parameter="resources.ResearcherResources" key="RESEARCHER_RESOURCES" null="false"/>
	<message-resources parameter="resources.RendererResources" key="RENDERER_RESOURCES" null="false"/>
    <!-- ========== Plug Ins Configuration ================================= -->
     <plug-in className="org.apache.struts.tiles.TilesPlugin" >
		<set-property property="definitions-config"
					  value="/WEB-INF/tiles/layouts/tiles-layout-definitions.xml,/WEB-INF/tiles/websiteManager/tiles-website-manager-definitions.xml,/WEB-INF/tiles/websiteManager/tiles-website-manager-pages-definitions.xml,/WEB-INF/tiles/messaging/tiles-messaging-definitions.xml,/WEB-INF/tiles/messaging/tiles-messaging-pages-definitions.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>        
</struts-config> 