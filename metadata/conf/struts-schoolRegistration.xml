<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
      "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    <!-- ========== Data Source Configuration =============================== -->
   
    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans type="org.apache.struts.action.ActionFormBean">
      
      <!-- SCHOOL REGISTRATION -->
	  <form-bean name="schoolRegistrationForm"
                 type="org.apache.struts.validator.DynaValidatorForm"
                 dynamic="true">
                 
         <form-property name="page" type="java.lang.Integer"/>
         
        <form-property name="oldPassword" type="java.lang.String" />
        <form-property name="newPassword" type="java.lang.String" />
        <form-property name="reTypeNewPassword" type="java.lang.String" />
        
      	<form-property name="idInternal" type="java.lang.String" />
      	<form-property name="documentIdNumber" type="java.lang.String" />
		<form-property name="emissionLocationOfDocumentID" type="java.lang.String" />
		<form-property name="dayOfEmissionDateOfDocumentId" type="java.lang.String" />
		<form-property name="monthOfEmissionDateOfDocumentId" type="java.lang.String" />
		<form-property name="yearOfEmissionDateOfDocumentId" type="java.lang.String" />
		<form-property name="dayOfExpirationDateOfDocumentId" type="java.lang.String" />
		<form-property name="monthOfExpirationDateOfDocumentId" type="java.lang.String" />
		<form-property name="yearOfExpirationDateOfDocumentId" type="java.lang.String" />
		<form-property name="name" type="java.lang.String" />
		<form-property name="dateOfBirth" type="java.lang.String" />
		<form-property name="nameOfFather" type="java.lang.String" />
		<form-property name="nameOfMother" type="java.lang.String" />
		<form-property name="nacionality" type="java.lang.String" />
		<form-property name="parishOfBirth" type="java.lang.String" />
		<form-property name="districtSubvisionOfBirth" type="java.lang.String" />
		<form-property name="districtOfBirth" type="java.lang.String" />
		<form-property name="address" type="java.lang.String" />
		<form-property name="area" type="java.lang.String" />
		<form-property name="primaryAreaCode" type="java.lang.String" />
		<form-property name="secondaryAreaCode" type="java.lang.String" />
		<form-property name="areaOfAreaCode" type="java.lang.String" />
		<form-property name="parishOfResidence" type="java.lang.String" />
		<form-property name="districtSubdivisionOfResidence" type="java.lang.String" />
		<form-property name="districtOfResidence" type="java.lang.String" />
		<form-property name="phone" type="java.lang.String" />
		<form-property name="mobile" type="java.lang.String" />
		<form-property name="email" type="java.lang.String" />
		<form-property name="availableEmail" type="java.lang.Boolean" />
		<form-property name="webAddress" type="java.lang.String" />
		<form-property name="availableWebAdress" type="java.lang.Boolean" />
		<form-property name="contributorNumber" type="java.lang.String" />
		<form-property name="occupation" type="java.lang.String" />
		<form-property name="username" type="java.lang.String" />
		<form-property name="typeIdDocument" type="java.lang.String" />
		<form-property name="sex" type="java.lang.String" />
		<form-property name="maritalStatus" type="java.lang.String" />
		
        <form-property name="answersMap" type="java.util.HashMap" />
        
        <form-property name="instructionsAccepted" type="java.lang.String" />
		<form-property name="residenceCandidate" type="java.lang.String"/>
		<form-property name="dislocated" type="java.lang.String" />
		<form-property name="observations" type="java.lang.String" />
		<form-property name="charCount" type="java.lang.String" />
		<form-property name="availablePhoto" type="java.lang.String" />
      </form-bean>
      
    </form-beans>
    
     <!-- ========== Global Exception Definitions ============================== -->
	<global-exceptions>
        <exception
			type="java.lang.Exception"
			key="error.Exception"
            handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
		<exception
			type="net.sourceforge.fenixedu.applicationTier.Servico.exceptions.NotAuthorizedException"
			key="error.NotAuthorized"
			handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
	</global-exceptions>
    
    <!-- ========== Global Forward Definitions =============================== -->
    <global-forwards type="org.apache.struts.action.ActionForward">
      <forward name="home" path="/mainPortalPage.jsp" redirect="true" contextRelative="true"/>
      <forward name="logoff" path="/logoff.do" contextRelative="true"/>
    </global-forwards>
    
    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">
    
    
    <!-- ********************* SCHOOL REGISTRATION ********************* -->

	 	<action path="/index"
    		forward="definition.schoolRegistration.showSchoolRegistrationInstructions"/>
		
    	<action path="/changePassword"
    		name="schoolRegistrationForm"
   		 	input="/index.do"
   			parameter="method"
   			validate="true"
   			type="net.sourceforge.fenixedu.presentationTier.Action.student.schoolRegistration.SchoolRegistrationAction"
      	    >
      	    <exception type="net.sourceforge.fenixedu.presentationTier.Action.exceptions.FenixActionException"
				 key="ServidorApresentacao.Action.exceptions.FenixActionException"
                 handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"
                 />
						
      	    <forward name="beginTransaction" path="/index.do" />
      	    <forward name="changePassword" path="definition.schoolRegistration.changePassword" />
      	</action>

		<action path="/viewPersonalInfo"
			name="schoolRegistrationForm"
            parameter="method"
            input="/changePassword.do?method=start&amp;page=0"
            validate="true"
      	    type="net.sourceforge.fenixedu.presentationTier.Action.student.schoolRegistration.SchoolRegistrationAction"
      	    >
      	    
      	    <exception type="net.sourceforge.fenixedu.presentationTier.Action.exceptions.FenixActionException"
				 key="ServidorApresentacao.Action.exceptions.FenixActionException"
                 handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"
                 />
						
      		<forward name="beginTransaction" path="/index.do" />
      	  	<forward name="Success" path="definition.schoolRegistration.personalInfo" />      	      
      	</action>

		<action path="/showStudentInquiry"
			parameter="method"
			name="schoolRegistrationForm"
			validate="true"
			type="net.sourceforge.fenixedu.presentationTier.Action.student.schoolRegistration.SchoolRegistrationAction"
			input="/viewPersonalInfo.do?method=visualizeFirstTimeStudentPersonalInfoAction&amp;page=0&amp;error=true"
			>

			<exception type="net.sourceforge.fenixedu.presentationTier.Action.exceptions.FenixActionException"
				 key="ServidorApresentacao.Action.exceptions.FenixActionException"
                 handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"
                 />
						
			<forward name="beginTransaction" path="/index.do" />
			<forward name="viewQuestions" path="definition.schoolRegistration.inquiry"/>
		</action>

		<action path="/residenceCandidacy"
			parameter="method"
			name="schoolRegistrationForm"
			validate="true"
			type="net.sourceforge.fenixedu.presentationTier.Action.student.schoolRegistration.SchoolRegistrationAction"
			input="/showStudentInquiry.do?method=viewInquiryQuestions&amp;page=0"
			>
			<exception type="net.sourceforge.fenixedu.presentationTier.Action.exceptions.FenixActionException"
				 key="ServidorApresentacao.Action.exceptions.FenixActionException"
                 handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"
                 />

			<forward name="beginTransaction" path="/index.do" />
			<forward name="residenceCandidacy" path="definition.schoolRegistration.residenceCandidacy" />
		</action>
			
		
		<action path="/enrollStudent"
			parameter="method"
			name="schoolRegistrationForm"
			validate="true"
			type="net.sourceforge.fenixedu.presentationTier.Action.student.schoolRegistration.SchoolRegistrationAction"
			input="/residenceCandidacy.do?method=residenceCandidacy&amp;page=0"
			>
			
			<exception type="net.sourceforge.fenixedu.presentationTier.Action.exceptions.FenixActionException"
				 key="ServidorApresentacao.Action.exceptions.FenixActionException"
                 handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"
                 />

			<forward name="beginTransaction" path="/viewEnrollments.do?method=viewStudentEnrollments" />
			<forward name="viewEnrollments" path="/viewEnrollments.do?method=viewStudentEnrollments" />
		</action>
		
		<action path="/viewEnrollments"
			parameter="method"
			validate="true"
			name="schoolRegistrationForm"
			type="net.sourceforge.fenixedu.presentationTier.Action.student.schoolRegistration.SchoolRegistrationAction"
			>
			<exception type="net.sourceforge.fenixedu.presentationTier.Action.exceptions.FenixActionException"
				 key="ServidorApresentacao.Action.exceptions.FenixActionException"
                 handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"
                 />

			<forward name="declarations" path="definition.schoolRegistration.declarations" />
			<forward name="Success" path="definition.schoolRegistration.showSchoolRegistrationInfo" />
		</action>
		
		<action path="/studentTimeTable"
        	type="net.sourceforge.fenixedu.presentationTier.Action.student.ViewStudentTimeTable"
        	>
			<exception type="net.sourceforge.fenixedu.presentationTier.Action.exceptions.FenixActionException"
				 key="ServidorApresentacao.Action.exceptions.FenixActionException"
                 handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"
                 />
        	<forward name="sucess" path="definition.schoolRegistration.schedule"/>
        </action>
        
       	<action path="/declaration" 
       		parameter="method"
       		name="schoolRegistrationForm"
			type="net.sourceforge.fenixedu.presentationTier.Action.student.schoolRegistration.SchoolRegistrationAction"
			>
			<exception type="net.sourceforge.fenixedu.presentationTier.Action.exceptions.FenixActionException"
				 key="ServidorApresentacao.Action.exceptions.FenixActionException"
                 handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"
                 />
	       	<forward name="sucess" path="definition.schoolRegistration.printDeclaration"/>
       	</action>

		<!--<action path="/logoff" 
			type="net.sourceforge.fenixedu.presentationTier.Action.commons.LogOffAction"
		    name="schoolRegistrationForm">
            <forward name="Success" path="definition.schoolRegistration.logout" contextRelative="true"/>
        </action> -->
    </action-mappings>
    
    <!-- ========== Controller Configuration ================================ -->
    <controller processorClass="net.sourceforge.fenixedu.presentationTier.processor.FenixRequestProcessorWithTiles"/>
    
    <!-- ========== Message Resources Definitions ============================ -->
    <message-resources parameter="ServidorApresentacao.SchoolRegistrationResources" null="false"/>
	<message-resources parameter="ServidorApresentacao.GlobalResources" key="GLOBAL_RESOURCES" null="false"/>
        
    <!-- ========== Plug Ins Configuration ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/fenix-validator-rules.xml,/WEB-INF/conf/validation-schoolRegistration.xml"/>
    </plug-in>
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" 
            value="/WEB-INF/tiles/layouts/tiles-layout-definitions.xml,/WEB-INF/tiles/schoolRegistration/tiles-schoolRegistration-definitions.xml,/WEB-INF/tiles/schoolRegistration/tiles-schoolRegistration-pages-definitions.xml" />
        <set-property property="moduleAware" value="true" />
        <set-property property="definitions-parser-validate" value="true" />
    </plug-in>
</struts-config>
    
    
