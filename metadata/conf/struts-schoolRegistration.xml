<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
      "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    <!-- ========== Data Source Configuration =============================== -->
   
    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans type="org.apache.struts.action.ActionFormBean">
      
      <!-- SCHOOL REGISTRATION -->
	  <form-bean name="schoolRegistrationForm"
                 type="org.apache.struts.validator.DynaValidatorForm"
                 dynamic="true">
        <form-property name="oldPassword" type="java.lang.String" />
        <form-property name="newPassword" type="java.lang.String" />
        <form-property name="reTypeNewPassword" type="java.lang.String" />
        
      	<form-property name="idInternal" type="java.lang.String" />
      	<form-property name="documentIdNumber" type="java.lang.Integer" />
		<form-property name="emissionLocationOfDocumentID" type="java.lang.String" />
		<form-property name="dayOfEmissionDateOfDocumentId" type="java.lang.Integer" />
		<form-property name="monthOfEmissionDateOfDocumentId" type="java.lang.Integer" />
		<form-property name="yearOfEmissionDateOfDocumentId" type="java.lang.Integer" />
		<form-property name="dayOfExpirationDateOfDocumentId" type="java.lang.Integer" />
		<form-property name="monthOfExpirationDateOfDocumentId" type="java.lang.Integer" />
		<form-property name="yearOfExpirationDateOfDocumentId" type="java.lang.Integer" />
		<form-property name="name" type="java.lang.String" />
		<form-property name="dateOfBirth" type="java.lang.Integer" />
		<form-property name="nameOfFather" type="java.lang.String" />
		<form-property name="nameOfMother" type="java.lang.String" />
		<form-property name="nacionality" type="java.lang.String" />
		<form-property name="parishOfBirth" type="java.lang.String" />
		<form-property name="districtSubvisionOfBirth" type="java.lang.String" />
		<form-property name="districtOfBirth" type="java.lang.String" />
		<form-property name="address" type="java.lang.String" />
		<form-property name="area" type="java.lang.String" />
		<form-property name="primaryAreaCode" type="java.lang.Integer" />
		<form-property name="secondaryAreaCode" type="java.lang.Integer" />
		<form-property name="areaOfAreaCode" type="java.lang.String" />
		<form-property name="parishOfResidence" type="java.lang.String" />
		<form-property name="districtSubdivisionOfResidence" type="java.lang.String" />
		<form-property name="districtOfResidence" type="java.lang.String" />
		<form-property name="phone" type="java.lang.Integer" />
		<form-property name="mobile" type="java.lang.Integer" />
		<form-property name="email" type="java.lang.String" />
		<form-property name="availableEmail" type="java.lang.Boolean" />
		<form-property name="webAddress" type="java.lang.String" />
		<form-property name="availableWebAdress" type="java.lang.Boolean" />
		<form-property name="contributorNumber" type="java.lang.String" />
		<form-property name="occupation" type="java.lang.String" />
		<form-property name="username" type="java.lang.String" />
		<form-property name="password" type="java.lang.String" />
		<form-property name="typeIdDocument" type="java.lang.String" />
		<form-property name="sex" type="java.lang.String" />
		<form-property name="maritalStatus" type="java.lang.String" />
		
        <form-property name="answersMap" type="java.util.HashMap" />
      </form-bean>
      
    </form-beans>
    
     <!-- ========== Global Exception Definitions ============================== -->
	<global-exceptions>
        <exception
			type="java.lang.Exception"
			key="error.Exception"
            handler="ServidorApresentacao.config.FenixContainerExceptionHandler"
			/>
		<exception
			type="ServidorAplicacao.Servico.exceptions.NotAuthorizedException"
			key="error.NotAuthorized"
			handler="ServidorApresentacao.config.FenixContainerExceptionHandler"
			/>
	</global-exceptions>
    
    <!-- ========== Global Forward Definitions =============================== -->
    <global-forwards type="org.apache.struts.action.ActionForward">
      <forward name="home" path="/mainPortalPage.jsp" redirect="true" contextRelative="true"/>
      <forward name="logoff" path="/logoff.do" contextRelative="true"/>
    </global-forwards>
    
    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">
    
    <action path="/showStudentInquiry" name="schoolRegistrationForm" 
    		forward="definition.schoolRegistration.inquiry"/>
    		
    
    <!-- ********************* SCHOOL REGISTRATION ********************* -->
      <action path="/index" 
    		forward="definition.schoolRegistration.changePassword"/>
      
      
		<action path="/VisualizeFistTimeStudentPersonalInfoAction"
			name="schoolRegistrationForm"
            input="/index.do"
      	    type="ServidorApresentacao.Action.student.schoolRegistration.VisualizeFirstTimeStudentPersonalInfoAction"
      	    >
      	  	<forward name="Success" path="definition.schoolRegistration.personalInfo"/>      	      
      	</action>
		
		<action path="/schoolRegistration"
			name="schoolRegistrationForm"
			type="ServidorApresentacao.Action.student.schoolRegistration.EnrollAction"
			input="/VisualizeFistTimeStudentPersonalInfoAction.do"
			>
		</action>
    </action-mappings>
    
    <!-- ========== Controller Configuration ================================ -->
    <controller processorClass="ServidorApresentacao.processor.FenixRequestProcessorWithTiles"/>
    
    <!-- ========== Message Resources Definitions ============================ -->
    <message-resources parameter="ServidorApresentacao.ApplicationResources" null="false"/>
    <message-resources parameter="ServidorApresentacao.StudentResources" key="STUDENT_RESOURCES" null="false"/>
        
    <!-- ========== Plug Ins Configuration ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/fenix-validator-rules.xml,/WEB-INF/conf/validation-schoolRegistration.xml"/>
    </plug-in>
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" 
            value="/WEB-INF/tiles/layouts/tiles-layout-definitions.xml,/WEB-INF/tiles/schoolRegistration/tiles-schoolRegistration-definitions.xml,/WEB-INF/tiles/schoolRegistration/tiles-schoolRegistration-pages-definitions.xml" />
        <set-property property="moduleAware" value="true" />
        <set-property property="definitions-parser-validate" value="true" />
    </plug-in>
</struts-config>
    
    
