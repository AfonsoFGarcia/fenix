        <!-- ======================================================================== -->
        <!-- ====================== USE CASE: Insert Professorship ========================== -->
        <action path="/createProfessorship" 
            input="/createProfessorship?method=showExecutionDegreeExecutionCourses" 
            name="teacherExecutionCourseForm" scope="request" parameter="method" 
            type="ServidorApresentacao.Action.teacher.professorship.CreateProfessorshipDispatchAction">

            <exception 
                type="ServidorAplicacao.Servico.teacher.professorship.ResponsibleForValidator$InvalidCategory" 
