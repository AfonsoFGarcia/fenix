                key="message.professorship.numberOfResponsibleForExceeded" 
                path="/createProfessorship.do?method=showExecutionDegreeExecutionCourses" 
                handler="ServidorApresentacao.Action.teacher.professorship.exception.handler.MaxResponsibleForExceedHandler"/>

