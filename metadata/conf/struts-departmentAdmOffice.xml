                type="ServidorAplicacao.Servico.teacher.professorship.ResponsibleForValidator$MaxResponsibleForExceed" 
                key="message.professorship.numberOfResponsibleForExceeded" 
                path="/showTeacherProfessorshipsForManagement.do" 
                handler="ServidorApresentacao.Action.teacher.professorship.exception.handler.MaxResponsibleForExceedHandler"/>
            <forward name="successfull-update" path="/showTeacherProfessorshipsForManagement.do"/>
        </action>
            <!-- ====================== USE CASE: Remove Professorship ========================== -->
        <action path="/removeProfessorship" 
            input="/showTeacherProfessorshipsForManagement.do" 
            name="teacherExecutionCourseForm" scope="request" parameter="method" 
            type="ServidorApresentacao.Action.teacher.professorship.RemoveProfessorshipAction">
