<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
      "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    
    <!-- ========== Data Source Configuration =============================== -->
    <data-sources />
    
    <!-- ========== Form Bean Definitions ================================== -->
  
     <!--  ============= by gedl 26-9-2005  ================-->
    <form-beans type="org.apache.struts.action.ActionFormBean">
	    <form-bean name="userGroupForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
	    	<form-property name="method" type="java.lang.String"/>
	    	<form-property name="name" type="java.lang.String"/>
        	<form-property name="userGroupType" type="java.lang.String" />    	
	    	<form-property name="description" type="java.lang.String"/>
	    	<form-property name="executionPeriodID" type="java.lang.Integer"/>
	    	<form-property name="executionDegreeID" type="java.lang.Integer"/>
	    	<form-property name="curricularYear" type="java.lang.Integer"/>
	    	<form-property name="executionCourseID" type="java.lang.Integer"/>
	    	<form-property name="selectedGroups" type="java.lang.Integer[]"/>
        <form-property name="excludeGroups" type="java.lang.Integer[]"/>
        <form-property name="selectedRole" type="java.lang.Integer"/>
	    </form-bean> 
    <!--  ================================================ -->    

     <!--  ============= by gedl 17-10-2005  ================-->
       <form-bean name="receiveEmailForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
            <form-property name="theFile" type="org.apache.struts.upload.FormFile" />
            <form-property name="password" type="java.lang.String" />
            <form-property name="username" type="java.lang.String" />
        </form-bean>
    <!--  ================================================ -->        
   
    <!--  ============= by gedl 18-10-2005  ================-->
       <form-bean name="mailingListForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
            <form-property name="name" type="java.lang.String" />
            <form-property name="address" type="java.lang.String" />
            <form-property name="description" type="java.lang.String" />
            <form-property name="groupID" type="java.lang.Integer" />
            <form-property name="mailingListID" type="java.lang.Integer" />
            <form-property name="threaded" type="java.lang.Boolean" />             
            <form-property name="threadId" type="java.lang.Integer" />
            <form-property name="expandedMessages" type="java.lang.Integer[]"/> 
        </form-bean>
    <!--  ================================================ -->    
    
    <!--  ============= by gedl 15-11-2005  ================-->
       <form-bean name="cmsConfigurationForm" type="net.sourceforge.fenixedu.presentationTier.Action.cms.basic.CmsConfigurationForm" dynamic="true">
            <form-property name="smtpServerAddress" type="java.lang.String" />
            <form-property name="filterNonTextualAttachments" type="java.lang.Boolean" />
            <form-property name="mailingListHost" type="java.lang.String"/>
            <form-property name="conversationReplyMarkers" type="java.lang.String"/>
            <form-property name="maxAttachmentSize" type="java.lang.Integer"/>
            <form-property name="maxMessageSize" type="java.lang.Integer"/>
        </form-bean>
    <!--  ================================================ -->          
    
      <!--  ============= by gedl 15-11-2005  ================-->
       <form-bean name="executionCourseWebsiteManagementForm" type="net.sourceforge.fenixedu.presentationTier.Action.cms.website.executionCourseWebsite.ExecutionCourseWebSiteManagementForm" dynamic="false"/>
    <!--  ================================================ -->      
    
       <form-bean name="voidForm" type="org.apache.struts.action.DynaActionForm" dynamic="false"/>
       
       <form-bean name="sendMailForm" type="net.sourceforge.fenixedu.presentationTier.Action.cms.messaging.SendMailForm" dynamic="false"/>
    </form-beans>


    <!-- ========== Global Exception Definitions ============================== -->
	<global-exceptions>
        <exception
			type="java.lang.Exception"
			key="error.Exception"
            handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
		<exception
			type="net.sourceforge.fenixedu.applicationTier.Servico.exceptions.NotAuthorizedException"
			key="error.NotAuthorized"
			handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
	</global-exceptions>
    
    <!-- ========== Global Forward Definitions =============================== -->
    <global-forwards type="org.apache.struts.action.ActionForward">
    </global-forwards>
    
    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">
    
        <action path="/index" type="net.sourceforge.fenixedu.presentationTier.Action.commons.VoidAction">
            <forward name="Success" path="index"/>
        </action>       
        <!--  ============= by gedl 24-9-2005  ================-->
		<action path="/personalGroupsManagement"
			type="net.sourceforge.fenixedu.presentationTier.Action.cms.groupManagement.PersonalGroupsManagement"
			parameter="method"
			scope="request"
			name="userGroupForm"
			>
			<forward name="showPersonalGroups" path="showPersonalGroups"/>
			<forward name="showInitialUserGroupOptions" path="showInitialUserGroupOptions"/>
			<forward name="selectOptionsFor_EXECUTION_COURSE_STUDENTS_GROUP" path="/executionCourseStudentsGroupManagement.do?method=prepareChooseExecutionPeriod"/>
			<forward name="selectOptionsFor_EXECUTION_COURSE_TEACHERS_GROUP" path="/executionCourseTeachersGroupManagement.do?method=prepareChooseExecutionPeriod"/>							
			<forward name="selectOptionsFor_UNION_GROUP" path="/unsortedGroupOperationsManagement.do?method=prepare"/>
			<forward name="selectOptionsFor_INTERSECTION_GROUP" path="/unsortedGroupOperationsManagement.do?method=prepare"/>
            <forward name="selectOptionsFor_DIFFERENCE_GROUP" path="/differenceGroupOperationsManagement.do?method=prepare"/>
            <forward name="selectOptionsFor_ROLE_GROUP" path="/roleGroupOperationsManagement.do?method=prepare"/>
			<forward name="showElements" path="showPersonsInGroup"/>										
            <forward name="addGroup" path="addGroup"/>  
		</action>        
		<!--  =================================================-->		
		<!--  ============= by gedl 26-9-2005  ================-->
		<action path="/executionCourseStudentsGroupManagement"
			type="net.sourceforge.fenixedu.presentationTier.Action.cms.groupManagement.ExecutionCourseStudentsGroupManagement"
			parameter="method"
			scope="request"
			name="userGroupForm"
			>
			<forward name="selectOptionsFor_EXECUTION_COURSE_STUDENTS_GROUP" path="showExecutionCourseUserGroupOptions"/>			
            <forward name="showStudents" path="showStudentsInExecutionCourse"/>  
			<forward name="addGroup" path="addGroup"/>	
		</action>
		<!--  =================================================-->		
				
		<!--  ============= by gedl 29-9-2005  ================-->
		<action path="/executionCourseTeachersGroupManagement"
			type="net.sourceforge.fenixedu.presentationTier.Action.cms.groupManagement.ExecutionCourseTeachersGroupManagement"
			parameter="method"
			scope="request"
			name="userGroupForm"
			>
			<forward name="selectOptionsFor_EXECUTION_COURSE_TEACHERS_GROUP" path="showExecutionCourseUserGroupOptions"/>
            <forward name="showTeachers" path="showTeachersInExecutionCourse"/>  
			<forward name="addGroup" path="addGroup"/>	
		</action>						
		<!--  =================================================-->	

		<action path="/unsortedGroupOperationsManagement"
			type="net.sourceforge.fenixedu.presentationTier.Action.cms.groupManagement.UnsortedGroupOperationsManagement"
			parameter="method"
			scope="request"
			name="userGroupForm"
			>
			<forward name="showCurrentGroups" path="showCurrentGroupsToOperate"/>
			<forward name="addGroup" path="addGroup"/>	
		</action>						
        <action path="/differenceGroupOperationsManagement"
            type="net.sourceforge.fenixedu.presentationTier.Action.cms.groupManagement.DifferenceGroupOperationsManagement"
            parameter="method"
            scope="request"
            name="userGroupForm"
            >
            <forward name="showCurrentGroups" path="showGroupsToIncludeOrExclude"/>
            <forward name="addGroup" path="addGroup"/>  
        </action>                       
        <action path="/roleGroupOperationsManagement"
            type="net.sourceforge.fenixedu.presentationTier.Action.cms.groupManagement.RoleGroupOperationsManagement"
            parameter="method"
            scope="request"
            name="userGroupForm"
            >
            <forward name="showRoles" path="showRoles"/>
            <forward name="addGroup" path="addGroup"/>  
        </action>
		
		<!--  ============= by gedl 17-10-2005  ================-->		
		<action path="/recieveEmail"
			type="net.sourceforge.fenixedu.presentationTier.Action.cms.messaging.ReceiveEmail"
			parameter="method"
			scope="request"
			name="receiveEmailForm"
			>
		</action>						
		<!--  =================================================-->	
						
		<!--  ============= by gedl 15-11-2005  ================-->		
		<action path="/cmsConfigurationManagement"
			type="net.sourceforge.fenixedu.presentationTier.Action.cms.basic.CmsConfigurationManagement"
			parameter="method"
			scope="request"
			name="cmsConfigurationForm"
			attribute="cmsConfigurationForm"
			>
			<forward name="showConfiguration" path="showConfiguration"/>						
			<forward name="cmsDeleted" path="/cmsConfigurationManagement.do?method=prepare"/>
			<forward name="cmsCreated" path="/cmsConfigurationManagement.do?method=prepare"/>
		</action>						
		<!--  =================================================-->	
		
		<!--  ============= by gedl 6-12-2005  ================-->		
		<action path="/executionCourseWebsiteManagement"
			type="net.sourceforge.fenixedu.presentationTier.Action.cms.website.executionCourseWebsite.ExecutionCourseWebsiteManagement"
			parameter="method"
			scope="request"
			name="executionCourseWebsiteManagementForm"
			attribute="executionCourseWebsiteManagementForm"
			>
			<forward name="showlAllExecutionCourseWebsites" path="showAllExecutionCourseWebsites"/>
		</action>						
		<!--  =================================================-->	
				
        <action path="/websiteTypeManagement"
            type="net.sourceforge.fenixedu.presentationTier.Action.cms.websiteTypeManagement.WebsiteTypeManagement"
            parameter="method"
            name="voidForm"
            scope="request">
            <forward name="list" path="listWebsiteType"/>
            <forward name="edit" path="editWebsiteType"/>
            <forward name="details" path="viewWebsiteType"/>
            <forward name="create" path="createWebsiteType"/>
            <forward name="createSection" path="createWebsiteTypeSection"/>
            <forward name="createItem" path="createWebsiteTypeItem"/>
            <forward name="editSection" path="editWebsiteTypeSection"/>
            <forward name="editItem" path="editWebsiteTypeItem"/>
        </action>				

        <action path="/functionalityLinkManagement"
            type="net.sourceforge.fenixedu.presentationTier.Action.cms.websiteTypeManagement.FunctionalityLinkManagement"
            parameter="method"
            name="voidForm"
            scope="request">
            <forward name="list" path="listFunctionalityLink"/>
            <forward name="edit" path="editFunctionalityLink"/>
            <forward name="details" path="viewFunctionalityLink"/>
            <forward name="create" path="createFunctionalityLinkWebsite"/>
        </action>               

        <action path="/websiteManagement"
            type="net.sourceforge.fenixedu.presentationTier.Action.cms.website.WebsiteManagement"
            parameter="method"
            name="voidForm"
            scope="request">
            <forward name="viewWebsites" path="showAllExecutionCourseWebsites"/>
            <forward name="edit" path="editWebsite"/>
            <forward name="createSection" path="createWebsiteSection"/>
            <forward name="createItem" path="createWebsiteItem"/>
            <forward name="editItem" path="editWebsiteItem"/>
            <forward name="editSection" path="editWebsiteSection"/>
        </action>
				
        <action path="/domain/view" type="net.sourceforge.fenixedu.presentationTier.renderers.actions.ViewObjectAction">
            <forward name="show" path="domain.view"/>
        </action>
        
		<action path="/mailSender"
            type="net.sourceforge.fenixedu.presentationTier.Action.cms.messaging.mailSender.PersonalGroupsMailSender"
            parameter="method"
            name="sendMailForm"
            scope="request">
            
            <forward name="sendMail" path="sendMail"/>
        </action>
    </action-mappings>
    
    <!-- ========== Controller Configuration ================================ -->
    <controller processorClass="net.sourceforge.fenixedu.presentationTier.processor.FenixRequestProcessorWithTiles"/>
    
    <!-- ========== Message Resources Definitions ============================ -->
	<message-resources parameter="resources.ManagerResources" key="MANAGER_RESOURCES" null="false"/>
	<message-resources parameter="resources.GlobalResources" key="GLOBAL_RESOURCES" null="false"/>
    <message-resources parameter="resources.CmsResources" key="CMS_RESOURCES" null="false" />
    <message-resources parameter="resources.EnumerationResources" key="ENUMERATION_RESOURCES" null="false"/>

    <!-- ========== Plug Ins Configuration ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
            value="/WEB-INF/validator-rules.xml,/WEB-INF/fenix-validator-rules.xml,/WEB-INF/conf/validation-cms.xml"/>
    </plug-in>
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" 
            value="/WEB-INF/tiles/layouts/tiles-layout-definitions.xml,/WEB-INF/tiles/cms/tiles-cms-definitions.xml,/WEB-INF/tiles/cms/tiles-cms-pages-definitions.xml" 
            />
        <set-property property="moduleAware" value="true" />
        <set-property property="definitions-parser-validate" value="true" />
    </plug-in>
</struts-config>
