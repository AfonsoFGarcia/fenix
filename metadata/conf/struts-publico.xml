<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
      "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    
    <!-- ========== Data Source Configuration =============================== -->

    
    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans type="org.apache.struts.action.ActionFormBean">

      <form-bean name="indexForm"
                type="org.apache.struts.validator.DynaValidatorForm"
                dynamic="true">
        <form-property name="index" type="java.lang.Integer"/>
      </form-bean>
	
	  <!-- CONTEXTO -->
      <!-- Dynamic-FormBean para EscolherContexto -->
      <form-bean name="chooseSearchContextForm"
                 type="ServidorApresentacao.validator.form.FenixDynaValidatorForm"
                 dynamic="true">
        <form-property name="index" type="java.lang.String"/>

        <form-property name="curricularYear" type="java.lang.Integer"/>
        <form-property name="page" type="java.lang.Integer"/> 
      </form-bean>
      
      <form-bean name="chooseExecutionCourseForm"
                 type="org.apache.struts.validator.DynaValidatorForm"
                 dynamic="true">
        <form-property name="courseInitials" type="java.lang.String"/>
	  </form-bean>
	  
	  <!-- Dynamic-FormBean for Choose Context-->
      <form-bean name="chooseContextForm"
                 type="ServidorApresentacao.validator.form.FenixDynaValidatorForm"
                 dynamic="true">
        <form-property name="index" type="java.lang.String"/>
        <form-property name="curricularYear" type="java.lang.Integer"/>
        <form-property name="page" type="java.lang.Integer"/> 
      </form-bean>
	  

	  <!-- ROOMS -->
      <!-- Dynamic-FormBean para CriarSala -->
      <form-bean name="roomForm"
                type="org.apache.struts.validator.DynaValidatorForm"
                dynamic="true">
        <form-property name="name" type="java.lang.String"/>
        <form-property name="building" type="java.lang.String"/>
        <form-property name="floor" type="java.lang.String"/>
        <form-property name="type" type="java.lang.String"/>
        <form-property name="capacityNormal" type="java.lang.String"/>
        <form-property name="capacityExame" type="java.lang.String"/>
      </form-bean>

      <!-- Dynamic-FormBean para PesquisarSalas -->
      <form-bean name="posicaoFormBean"
                 type="org.apache.struts.validator.DynaValidatorForm"
                 dynamic="true">
        <form-property name="posicao" type="java.lang.Integer"/>
      </form-bean>

      <form-bean name="salaFormBean"
                 type="DataBeans.InfoSala"
                 dynamic="true">
      </form-bean>

	  <!-- Dynamic-FormBean para as Turmas -->
      <form-bean name="classTimeTableWithClassNameAndDegreeInitialsForm"
                 type="org.apache.struts.validator.DynaValidatorForm"
                 dynamic="true">
        <form-property name="className" type="java.lang.String"/>
        <form-property name="degreeInitials" type="java.lang.String"/>
        <form-property name="nameDegreeCurricularPlan" type="java.lang.String"/>
      </form-bean>


	  <!-- EXAMS -->
      <!-- Dynamic-FormBean for Choose Context-->
      <form-bean name="chooseExamsMapContextForm"
                 type="ServidorApresentacao.validator.form.FenixDynaValidatorForm"
                 dynamic="true">
        <form-property name="index" type="java.lang.String"/>
        <form-property name="selectedCurricularYears" type="java.lang.String[]" size="0"/>
        <form-property name="selectAllCurricularYears" type="java.lang.Boolean"/>
        <form-property name="page" type="java.lang.Integer"/> 
      </form-bean>

    
      <!-- Dynamic-FormBean para Day And Shift Context -->
     <form-bean name="chooseDayAndShiftForm"
                type="ServidorApresentacao.validator.form.FenixDynaValidatorForm"
                dynamic="true"
                >
        <form-property name="day" type="java.lang.String"/>
        <form-property name="month" type="java.lang.String"/>
        <form-property name="year" type="java.lang.String"/>
        <form-property name="beginning" type="java.lang.String"/>
        <form-property name="page" type="java.lang.Integer"/>
     </form-bean>
     
  </form-beans>     
     
    
    <!-- ========== Global Exception Definitions ============================== -->
	<global-exceptions>
		<exception type="java.lang.Exception"
			       key="java.lang.Exception"
			       path="/naoExecutado.do"
			       handler="ServidorApresentacao.config.FenixExceptionHandler"/>
		<exception type="ServidorAplicacao.NotAuthorizedException"
			       key="ServidorAplicacao.NotAuthorizedException"
			       path="/naoAutorizado.do"
			       handler="ServidorApresentacao.config.FenixExceptionHandler"/>
		<exception type="ServidorAplicacao.NotExecutedException"
		  	       key="ServidorAplicacao.NotExecutedException"
		  	       path="/naoExecutado.do"
		  	       handler="ServidorApresentacao.config.FenixExceptionHandler" />
		<exception type="ServidorAplicacao.Servico.ExcepcaoInexistente"
			       key="ServidorAplicacao.Servico.ExcepcaoInexistente"
			       path="/naoExistente.do"
			       handler="ServidorApresentacao.config.FenixExceptionHandler" />
	</global-exceptions>


    
    <!-- ========== Global Forward Definitions =============================== -->
    <global-forwards type="org.apache.struts.action.ActionForward">
       <forward name="index" path="/index.do" redirect="true"/>
       <forward name="firstPage" path="/index.do"/>
    </global-forwards>
    
    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">
	    <action path="/consultExams" forward="/consultExams.jsp"/>
    
    
	    <!-- page fronting actions -->
    	
    	<action path="/index"
      	      type="ServidorApresentacao.Action.publico.InitiateSessionAction">
      	  <forward name="Success" path="/index.jsp"/>
      </action>
    	
    	
    	
    	<action path="/viewExecutionCourseShifts" 
    		type="ServidorApresentacao.Action.publico.ViewExecutionCourseShifts">
    		<forward name="Sucess" path="/viewExecutionCourseShifts.jsp"/>
 		</action>
 		
      <action parameter="method"
              path="/consultTimeTables"
              scope="request"
              type="ServidorApresentacao.Action.publico.ConsultTimeTablesDispatchAction">
        <forward name="criteriaPage" path="/consultTimeTablesCriterias.jsp"/>
        <forward name="showTimeTables" path="/viewClasses.do"/>
      </action>
		

      <action input="/chooseContextDA.do?method=prepare&amp;page=0&amp;inputPage=chooseContext"
              name="chooseSearchContextForm"
              parameter="method"
              path="/chooseContextDA"
              scope="request"
              validate="true"
              type="ServidorApresentacao.Action.commons.ChooseContextDispatchAction"
              >
        <forward name="chooseContext" path="/chooseContext.jsp"/>
        <forward name="classSearch" path="/viewClasses.do"/>
        <forward name="executionCourseSearch" path="/prepareSelectExecutionCourseAction.do"/>
      </action>


	<!-- Turmas -->	
	<action path="/viewClasses"
              type="ServidorApresentacao.Action.publico.ViewClassesAction"
              >
          <forward name="Sucess" path="/viewClasses.jsp"/>
      </action>

	<action path="/viewClassTimeTableWithClassNameAndDegreeInitialsAction"
			name="classTimeTableWithClassNameAndDegreeInitialsForm"
			type="ServidorApresentacao.Action.publico.ViewClassTimeTableWithClassNameAndDegreeInitialsAction"
			validate="false"
			>
		<forward name="Sucess" path="/viewClassTimeTable.do"/>
	</action>

	<!-- Turnos -->
	
	<action   
	          
	          path="/prepareSelectExecutionCourseAction"
              type="ServidorApresentacao.Action.publico.PrepareSelectExecutionCourseAction"
              >
          <forward name="sucess" path="/prepareSelectExecutionCourse.jsp"/>
          
      </action>


	  <!-- SALAS -->
      <action path="/prepareConsultRooms"
              type="ServidorApresentacao.Action.publico.PrepareConsultRoomsFormAction"
              >
          <forward name="Sucess" path="/consultRooms.jsp"/>
      </action>

      <action attribute="roomForm"
              input="/consultRooms.jsp"
              name="roomForm"
              path="/chooseRoomsForm"
              scope="request"
              validate="true"
              type="ServidorApresentacao.Action.publico.SelectRoomsFormAction">
        <forward name="Sucess" path="/chooseRoom.jsp"/>
      </action>

      <action attribute="indexForm"
              input="/chooseRoom.jsp"
              name="indexForm"
              path="/viewRoom"
              scope="request"
              validate="true"
              type="ServidorApresentacao.Action.publico.ViewRoomFormAction">
        <forward name="Sucess" path="/viewRoom.jsp"/>
      </action>

      <action path="/prepareViewRoomOcupation"
              type="ServidorApresentacao.Action.publico.SelectSemesterAction"
              >
          <forward name="Sucess" path="/chooseSemester.jsp"/>
      </action>

      <action input="/viewClasses.jsp"
      		  path="/viewClassTimeTable"
              type="ServidorApresentacao.Action.publico.ViewClassTimeTableAction"
              >
          <forward name="Sucess" path="/viewClassTimeTable.jsp"/>
      </action>
      
      <action 
              input="/viewShifts.jsp"
             
      		  path="/viewShiftTimeTable"
             type="ServidorApresentacao.Action.publico.ViewShiftTimeTableAction"
              >
          <forward name="Sucess" path="/viewShiftTimeTable.jsp"/>
      </action>

	<!-- Start of Gesdis-->
	
	<action path="/curricularCourses" 
    		type="ServidorApresentacao.Action.publico.SectionRemoverAction">
    		<forward name="sucess" path="/curricularCourses.jsp"/>
 		</action>
	
	
	
		<action path="/viewTimeTable" 
    		type="ServidorApresentacao.Action.publico.ViewExecutionCourseTimeTableAction">
    		<forward name="Sucess" path="/viewTimeTable.jsp"/>
 		</action>
 		
	<action     
		path="/accessBibliographicReferences"
		parameter="method"      			
		scope="session"
        type="ServidorApresentacao.Action.teacher.BibliographicReferenceManagerDispatchAction">	           
		<forward name="bibliographyManagement" path="/bibliographicReferences.jsp"/>
		<forward name="editBibliographicReference" path="/bibliographicReferences.jsp"/>
	</action>             

	<!-- access to announcements -->
	<action 
		type="ServidorApresentacao.Action.teacher.AccessAnnouncementManagementAction" 
		path="/accessAnnouncements">
        <forward name="AnnouncementManagement" path="/announcements.jsp" />  
         <forward name="EditAnnouncement" path="/announcements.jsp" /> 
             
	</action>

	<!-- access to objectives -->
	<action 
		type="ServidorApresentacao.Action.teacher.CurriculumManagerDispatchAction" 
		parameter="method"
		scope="session"
		path="/accessObjectives">
        <forward name="viewObjectives" path="/objectives.jsp" />       
	</action>

	<!-- access to program -->
	<action 
		type="ServidorApresentacao.Action.teacher.CurriculumManagerDispatchAction" 
		parameter="method"
		scope="session"
		path="/accessProgram">
        <forward name="viewProgram" path="/program.jsp" />       
	</action>

	
	<!-- Site viewer -->
	<action path="/viewSite"
        type="ServidorApresentacao.Action.teacher.ReadSite">    
     <forward name="viewSite" path="/viewExecutionCourse.jsp"/>         
	</action>
	
	
	<!-- Section viewer -->
	<action path="/viewSection"
        type="ServidorApresentacao.Action.publico.ViewSectionAction">    
     <forward name="Sucess" path="/viewSection.jsp"/>         
	</action>
	
	<!-- Evaluation viewer -->
	<action path="/viewEvaluation"
        type="ServidorApresentacao.Action.publico.ViewEvaluationAction">    
     <forward name="Sucess" path="/viewEvaluation.jsp"/>         
	</action>
	
<!-- End of Gesdis-->

<!-- EXAMS -->
	<action path="/chooseDayAndShiftForm"
			input="/chooseDayAndShift.jsp"
			name="chooseDayAndShiftForm"
            type="ServidorApresentacao.Action.sop.ChooseExamDayAndShiftDispatchAction"
            parameter="method"
            scope="request"
            validate="true"
            >
         <forward name="Show Choose Form" path="/chooseDayAndShift.jsp"/>
         <forward name="View Exams" path="/viewExamsDayAndShiftForm.do?method=view"/>
	</action>

	<action path="/viewExamsDayAndShiftForm"		
			input="/viewExamsDayAndShift.jsp"
            type="ServidorApresentacao.Action.sop.ViewExamsByDayAndShiftDispatchAction"
            parameter="method"
            name="examForm"
            validate="false"
            >
         <forward name="View Exams" path="/viewExamsByDayAndShift.jsp"/>
         <forward name="Deleted Exam" path="/viewExamsDayAndShiftForm.do?method=view"/>
         <forward name="Edit Exam" path="/editExam.jsp"/>
         <forward name="Add Execution Course" path="/chooseExamsContextDA.do?method=prepare&amp;page=0&amp;inputPage=chooseExamsContext&amp;nextPage=addExecutionCourseToExam"/>
	</action>


    <action input="/chooseExamsContextDA.do?method=prepare&amp;page=0&amp;inputPage=chooseExamsContext"
            name="chooseContextForm"
            parameter="method"
            path="/chooseExamsContextDA"
            scope="request"
            validate="true"
            type="ServidorApresentacao.Action.commons.ChooseContextDispatchAction"
            >
        <forward name="chooseExamsContext" path="/chooseExamsContext.jsp"/>
        <forward name="createExam" path="/chooseExecutionCourseForm.do"/>
        <forward name="listByDegreeAndAcademicYear" path="/viewExamsByDegreeAndCurricularYear.do"/>
        <forward name="addExecutionCourseToExam" path="/chooseExecutionCourseToAddToExam.do"/>
    </action>

	<action path="/viewExamsByDegreeAndCurricularYear"
    		type="ServidorApresentacao.Action.sop.ViewExamsByDegreeAndCurricularYearAction"
    		>
    	<forward name="Sucess" path="/viewExamsByDegreeAndCurricularYear.jsp"/>
	</action>

    <action input="/chooseExamsMapContextDA.do?method=prepare&amp;page=0"
            name="chooseExamsMapContextForm"
            parameter="method"
            path="/chooseExamsMapContextDA"
            scope="request"
            validate="true"
            type="ServidorApresentacao.Action.sop.ChooseExamsMapContextDA"
            >
        <forward name="chooseExamsMapContext" path="/chooseExamsMapContext.jsp"/>
        <forward name="showExamsMap" path="/viewExamsMap.do?method=view"/>
    </action>

    <action path="/viewExamsMap"
            type="ServidorApresentacao.Action.sop.ViewExamsMapDA"
            parameter="method"
            name="examForm"
            validate="false"
            >
        <forward name="viewExamsMap" path="/viewExamsMap.jsp"/>
        <forward name="viewExecutionCourseByCode" path="/siteViewer.do?method=executionCourseViewer"/>
    </action>
	
<!-- END OF EXAMS -->

    <!-- ========== ADICIONADO POR DAVID SANTOS ================================ -->
		<action path="/siteViewer"
				input="/siteViewerError.jsp"
				scope="request"
				parameter="method"
				type="ServidorApresentacao.Action.publico.SiteViewerDispatchAction">
			<forward name="roomViewer" path="/viewRoom.jsp"/>
			<forward name="executionCourseViewer" path="/viewExecutionCourse.jsp"/>
		</action>
	
	<action name="chooseExecutionCourseForm"
			input="/prepareSelectExecutionCourse.jsp"
			path="/viewExecutionCourse"
			parameter="method"
			validate="true"
            type="ServidorApresentacao.Action.publico.SiteViewerDispatchAction">
          <forward name="executionCourseViewer" path="/viewExecutionCourse.jsp"/>
    </action>
     	 
    
     </action-mappings>     

    
    <!-- ========== Controller Configuration ================================ -->
	<controller processorClass="ServidorApresentacao.processor.FenixRequestProcessor" />
    
    <!-- ========== Message Resources Definitions ============================ -->
    <message-resources parameter="ServidorApresentacao.ApplicationResources" />
    
    <!-- ========== Plug Ins Configuration ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
      <set-property property="pathnames" 
                    value="/WEB-INF/validator-rules.xml,/WEB-INF/fenix-validator-rules.xml,/WEB-INF/conf/validation-publico.xml"/>
    </plug-in>
</struts-config>