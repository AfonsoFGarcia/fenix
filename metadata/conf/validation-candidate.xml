<?xml version="1.0" encoding="UTF-8" ?>
<!--<!DOCTYPE form-validation PUBLIC 
      "-//Apache Software Foundation//DTD Struts Validation Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/validation_1_1.dtd">-->

<form-validation>
  <formset>

    <form name="changeApplicationInfoForm">
      <field property="majorDegree" depends="required" page="1">
        <arg0 key="label.candidate.majorDegree" />
      </field>

      <field property="majorDegreeSchool" depends="required" page="1">
        <arg0 key="label.candidate.majorDegreeSchool" />
      </field>

      <field property="majorDegreeYear" depends="required,integer,range" page="1">
        <arg0 key="label.candidate.majorDegreeYear" />
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>1900</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>2100</var-value>
        </var>
      </field>

      <field property="average" depends="required,floatRange" page="1">
        <arg0 key="label.candidate.average" />
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>0.0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>20.0</var-value>
        </var>
      </field>

    </form>

  </formset>
</form-validation>
