     Currently there is a semi-hack built in the RendererPlugin to accept this format.
-->
<!DOCTYPE schemas SYSTEM "/WEB-INF/fenix-renderers-schemas.dtd">

<schemas>
<!-- 
  Example:
  
    <schema name="person.birth" type="net.sourceforge.fenixedu.domain.IPerson">
        <slot name="nascimento" key="person.nascimento.special-case" layout="heading-date">
            <property name="format" value="yyyy - MM - dd HH:mm"/>
        </slot>
    </schema>
    
    <schema name="person.country" type="net.sourceforge.fenixedu.domain.IPerson">
        <slot name="pais" schema="pais.minimal"/>
    </schema>
    
    <schema name="pais.minimal" type="net.sourceforge.fenixedu.domain.IPerson">
        <slot name="name"/>
        <slot name="nacionality"/>
    </schema>
 -->

  <schema name="DomainObject.oid" type="net.sourceforge.fenixedu.domain.DomainObject">
    <slot name="idInternal"/>
  </schema>
  
  <!-- FIXME: remove schemas after this, they are used only as example -->
  <schema name="person.simple-admin-info" type="net.sourceforge.fenixedu.domain.Person">
    <slot name="nome"/>
    <slot name="username"/>
    <slot name="email"/>
  </schema>
  
  <schema name="person.simple-admin-info.extended" type="net.sourceforge.fenixedu.domain.Person">
    <slot name="nome"/>
    <slot name="username" layout="link"/>
    <slot name="email">
        <property name="link" value="true"/>
    </slot>
    <slot name="pais" schema="country.name" layout="values"/>
  </schema>
  
  <schema name="country.name" type="net.sourceforge.fenixedu.domain.Country">
    <slot name="name"/>
  </schema>
</schemas>