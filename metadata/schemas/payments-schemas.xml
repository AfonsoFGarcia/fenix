<schema name="createReceiptBean.create" type="net.sourceforge.fenixedu.dataTransferObject.accounting.CreateReceiptBean">
	<slot name="contributor" layout="autoComplete"  validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
		<property name="size" value="70"/>
		<property name="labelField" value="contributorNumber"/>
		<property name="format" value="${contributorNumber} - ${contributorName}"/>
		<property name="indicatorShown" value="true"/>		
		<property name="serviceName" value="SearchObjects"/>
		<property name="serviceArgs" value="slot=contributorNumber"/>
		<property name="className" value="net.sourceforge.fenixedu.domain.Contributor"/>
		<property name="minChars" value="1"/>
		<property name="maxCount" value="20"/>
	</slot>
</schema>

