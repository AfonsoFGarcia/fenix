        <property name="size" value="40"/>
    </slot>
    <slot name="relative"/>
    <slot name="parameters">
        <property name="size" value="40"/>
    </slot>
    <slot name="title">
        <property name="size" value="40"/>
    </slot>
    <slot name="description" layout="area">
        <property name="rows" value="10"/>
        <property name="columns" value="40"/>
    </slot>
</schema>

<schema name="functionalities.concrete.functionality.create" 
