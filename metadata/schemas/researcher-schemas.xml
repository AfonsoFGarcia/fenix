<schema name="authorship.result" type="net.sourceforge.fenixedu.domain.research.result.Authorship">
	<slot name="result.title"/>
</schema>

<schema name="project.summary" type="net.sourceforge.fenixedu.domain.research.project.Project">
	<slot name="title"/>
</schema>

<schema name="researcher.person.personalInfo" bundle="RESEARCHER_RESOURCES" type="net.sourceforge.fenixedu.domain.Person">
	<slot name="name"/>
</schema>

<schema name="researchInterest.summary" type="net.sourceforge.fenixedu.domain.research.ResearchInterest">
	<slot name="order"/>
	<slot name="interest"/>
</schema>	

<schema name="researchInterest.title" type="net.sourceforge.fenixedu.domain.research.ResearchInterest">
	<slot name="interest"/>
</schema>	

<schema name="researchInterest.simpleCreate" bundle="RESEARCHER_RESOURCES" type="net.sourceforge.fenixedu.domain.research.ResearchInterest">
	<slot name="interest" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredMultiLanguageStringValidator"/>
</schema>	

<schema name="projectParticipation.create-defaults" bundle="RESEARCHER_RESOURCES" type="net.sourceforge.fenixedu.domain.research.project.ProjectParticipation">
	<slot name="project.title" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredMultiLanguageStringValidator">
		<property name="size" value="75"/>
	</slot>
	<slot name="project.projectAbstract" layout="area" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredMultiLanguageStringValidator">
		<property name="rows" value="5"/>
		<property name="columns" value="75"/>
	</slot>
	<slot name="project.startDate" layout="year-month" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
	<slot name="project.endDate" layout="year-month"/> 
	<slot name="project.projectType" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
	<slot name="role" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
</schema>	

<schema name="projectParticipation.edit-defaults" bundle="RESEARCHER_RESOURCES" type="net.sourceforge.fenixedu.domain.research.project.ProjectParticipation">
	<slot name="project.title" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredMultiLanguageStringValidator">
		<property name="size" value="75"/>
	</slot>
	<slot name="project.projectAbstract" layout="area" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredMultiLanguageStringValidator">
		<property name="rows" value="5"/>
		<property name="columns" value="75"/>
	</slot>
	<slot name="project.startDate" layout="year-month" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
	<slot name="project.endDate" layout="year-month"/> 
	<slot name="project.projectType" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
	<slot name="role" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
</schema>

<schema bundle="RESEARCHER_RESOURCES" name="patent-default" type="net.sourceforge.fenixedu.domain.research.result.Patent">
	<slot name="authorships" layout="tabular-list" schema="result.authors"/>
	<slot name="title" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredMultiLanguageStringValidator"/> 
	<slot name="description" layout="area">
		<property name="rows" value="5"/>
		<property name="columns" value="75"/>
	</slot>
	<slot name="type"/>
	<slot name="status"/>
	<slot name="registrationDate" layout="year-month" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
	<slot name="approvalDate" layout="year-month" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
	<slot name="country" layout="menu-select">
		<property name="choiceType" value="net.sourceforge.fenixedu.domain.Country"/> 
		<property name="format" value="${name}"/>
		<property name="sortBy" value="name"/>
	</slot>
	<slot name="local"/>
	<slot name="patentNumber"/>
	<slot name="numberPages"/>	
	<slot name="format"/>	
	<slot name="language"/>
	<slot name="url"/>
</schema>

<schema bundle="RESEARCHER_RESOURCES" name="patent.create" extends="patent-default" type="net.sourceforge.fenixedu.domain.research.result.Patent">
	<remove name="authorships"/>
</schema>

<schema bundle="RESEARCHER_RESOURCES" name="patent.details" extends="patent-default" type="net.sourceforge.fenixedu.domain.research.result.Patent">
	<remove name="authorships"/>	
	<slot name="description"/>
	<slot name="country" layout="format">
		<property name="format" value="${name}"/>
	</slot>
</schema>

<schema bundle="RESEARCHER_RESOURCES" name="patents.resume.list" type="net.sourceforge.fenixedu.domain.research.result.Patent">
	<slot name="title" layout="link">
		<property name="viewPage" value="/result/patents/patentsManagement.do?method=preparePatentDetails"/>
	</slot>
	<slot name="registrationDate"/>
</schema>

<schema name="result.authors" type="net.sourceforge.fenixedu.domain.Person" bundle="RESEARCHER_RESOURCES">
	<slot name="name" read-only="true"/>
	<slot name="username" read-only="true"/>
</schema>