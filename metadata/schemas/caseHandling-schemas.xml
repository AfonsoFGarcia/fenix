<schema name="SecondCycleIndividualCandidacyResultBean.manage" type="net.sourceforge.fenixedu.domain.candidacyProcess.secondCycle.SecondCycleIndividualCandidacyResultBean" bundle="APPLICATION_RESOURCES">
	<slot name="professionalExperience">
		<property name="size" value="2"/>
		<property name="maxLength" value="2"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="\d{1,}"/>
            <property name="message" value="error.conclusionGrade.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
	</slot>
	<slot name="affinity">
		<property name="size" value="6"/>
		<property name="maxLength" value="6"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="[0-9]+(\\.[0-9]+)?"/>
            <property name="message" value="error.conclusionGrade.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
	</slot>
	<slot name="degreeNature">
		<property name="size" value="2"/>
		<property name="maxLength" value="2"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="\d{1,}"/>
            <property name="message" value="error.conclusionGrade.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
	</slot>
	<slot name="grade">
		<property name="size" value="6"/>
		<property name="maxLength" value="6"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="[0-9]+(\\.[0-9]+)?"/>
            <property name="message" value="error.conclusionGrade.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
	</slot>
	<slot name="interviewGrade">
		<property name="size" value="6"/>
		<property name="maxLength" value="6"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="([0-9]+(\\.[0-9]+)?)|NA"/>
            <property name="message" value="error.conclusionGrade.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
	</slot>
	<slot name="state" key="label.candidacy.state" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
		<property name="excludedValues" value="STAND_BY, CANCELLED" />
	</slot>
	<slot name="notes">
		<property name="size" value="20"/>
	</slot>
</schema>
