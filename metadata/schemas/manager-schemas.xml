<schema name="NewInvitedPersonContactsInfo" type="net.sourceforge.fenixedu.dataTransferObject.person.InvitedPersonBean" bundle="MANAGER_RESOURCES">
	<slot name="phone">
    	<property name="size" value="9"/>
		<property name="maxLength" value="9"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="(\d{9})?"/>
            <property name="message" value="error.phone.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
    </slot>
    <slot name="mobile">
    	<property name="size" value="9"/>
		<property name="maxLength" value="9"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="(\d{9})?"/>
            <property name="message" value="error.phone.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
	</slot>
    <slot name="email"  validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredEmailValidator">
    	<property name="size" value="30"/>
		<property name="maxLength" value="100"/>
    </slot>
    <slot name="webAddress">
    	<property name="size" value="50"/>
		<property name="maxLength" value="200"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.UrlValidator">
			<property name="required" value="false" />
		</validator>
    </slot>    
</schema>	

