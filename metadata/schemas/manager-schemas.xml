		<property name="maxLength" value="100"/>
    </slot>
    <slot name="districtOfBirth">
    	<property name="size" value="50"/>
		<property name="maxLength" value="100"/>
    </slot>
    <slot name="fatherName">
    	<property name="size" value="50"/>
		<property name="maxLength" value="100"/>
	</slot>
    <slot name="motherName">
    	<property name="size" value="50"/>
		<property name="maxLength" value="100"/>
    </slot>          
</schema>

