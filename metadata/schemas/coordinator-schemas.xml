<schema name="thesis.bean.student" type="net.sourceforge.fenixedu.presentationTier.Action.coordinator.thesis.ThesisBean">
    <slot name="student" layout="by-number" key="label.student"
          validator="net.sourceforge.fenixedu.renderers.validators.NumberValidator"/>
</schema>

<schema name="thesis.jury.proposal.person" type="net.sourceforge.fenixedu.domain.thesis.ThesisEvaluationParticipant">
    <slot name="person.name" key="label.person.name"/>
    <slot name="category" key="label.teacher.category" layout="null-as-label">
        <property name="label" value="-"/>
        <property name="subLayout" value="values"/>
        <property name="subSchema" value="thesis.jury.proposal.person.category"/>
    </slot>
    <slot name="afiliation" key="label.coordinator.thesis.edit.teacher.currentWorkingDepartment" layout="null-as-label">
        <property name="label" value="-"/>
    </slot>
</schema>

<schema name="thesis.jury.proposal.person.category" type="net.sourceforge.fenixedu.domain.teacher.Category">
    <slot name="name"/>
</schema>

<schema name="thesis.bean.selectPerson.internal" type="net.sourceforge.fenixedu.presentationTier.Action.coordinator.thesis.ThesisBean">
    <slot name="internal" key="label.coordinator.thesis.edit.internal" layout="radio-postback">
        <property name="trueLabel" value="label.coordinator.thesis.edit.internalPerson"/>
        <property name="falseLabel" value="label.coordinator.thesis.edit.externalPerson"/>
        <property name="destination" value="changePersonType"/>
        <property name="classes" value="nobullet liinline"/>
    </slot>
    <slot name="personName" key="label.coordinator.thesis.edit.personName" layout="autoComplete" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
        <property name="size" value="70"/>
        <property name="rawSlotName" value="rawPersonName"/>
        <property name="labelField" value="text"/>
        <property name="format" value="${text}"/>
        <property name="indicatorShown" value="true"/>
        <property name="serviceName" value="SearchPersonsForParticipations"/>
        <property name="serviceArgs" value="slot=name"/>
        <property name="minChars" value="3"/>
    </slot>
</schema>

<schema name="thesis.bean.selectPerson.external" type="net.sourceforge.fenixedu.presentationTier.Action.coordinator.thesis.ThesisBean">
    <slot name="internal" key="label.coordinator.thesis.edit.internal" layout="radio-postback">
        <property name="trueLabel" value="label.coordinator.thesis.edit.internalPerson"/>
        <property name="falseLabel" value="label.coordinator.thesis.edit.externalPerson"/>
        <property name="destination" value="changePersonType"/>
        <property name="classes" value="nobullet liinline"/>
    </slot>
    <slot name="personName" key="label.coordinator.thesis.edit.personName" layout="autoComplete"  validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
        <property name="size" value="70"/>
        <property name="rawSlotName" value="rawPersonName"/>
        <property name="labelField" value="text"/>
        <property name="format" value="${text}"/>
        <property name="indicatorShown" value="true"/>
        <property name="serviceName" value="SearchExternalPersons"/>
        <property name="serviceArgs" value="slot=name"/>
        <property name="minChars" value="3"/>
    </slot>
</schema>

<schema name="thesis.bean.selectUnit.external" type="net.sourceforge.fenixedu.presentationTier.Action.coordinator.thesis.ThesisBean">
    <slot name="rawPersonName" key="label.coordinator.thesis.edit.personName.forUnit" read-only="true"/>
    <slot name="unitName" key="label.coordinator.thesis.edit.unitName" layout="autoComplete"  validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
        <property name="size" value="70"/>
        <property name="rawSlotName" value="rawUnitName"/>
        <property name="labelField" value="unit.nameWithAcronym"/>
        <property name="indicatorShown" value="true"/>
        <property name="serviceName" value="SearchExternalUnits"/>
        <property name="serviceArgs" value="slot=name"/>
        <property name="minChars" value="3"/>
    </slot>
</schema>

<schema name="thesis.jury.proposal.information" type="net.sourceforge.fenixedu.domain.thesis.Thesis">
    <slot name="student" layout="format" key="student">
        <property name="format" value="${person.name} (${number})"/>
    </slot>
    <slot name="title" key="label.coordinator.title"/>
    <slot name="comment" layout="null-as-label">
        <property name="label" value="-"/>
    </slot>
</schema>

<schema name="thesis.jury.proposal.information.edit" type="net.sourceforge.fenixedu.domain.thesis.Thesis">
    <slot name="student" layout="format" read-only="true">
        <property name="format" value="${person.name} (${number})"/>
    </slot>
    <slot name="title" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredMultiLanguageStringValidator">
        <property name="size" value="60"/>
    </slot>
    <slot name="comment" layout="longText">
        <property name="columns" value="60"/>
        <property name="rows" value="10"/>
    </slot>
</schema>

<schema name="thesis.confirm.revision.details" type="net.sourceforge.fenixedu.domain.thesis.Thesis">
    <slot name="student" layout="format" key="student">
        <property name="format" value="${person.name} (${number})"/>
    </slot>
    <slot name="title"/>
    <slot name="thesisAbstract" layout="null-as-label" key="label.thesis.abstract">
        <property name="label" value="label.thesis.field.empty"/>
        <property name="key" value="true"/>
    </slot>
    <slot name="keywords" layout="null-as-label" key="label.thesis.keywords">
        <property name="label" value="label.thesis.field.empty"/>
        <property name="key" value="true"/>
    </slot>
    <slot name="mark" layout="null-as-label" key="label.thesis.evaluate.mark">
        <property name="label" value="label.thesis.field.empty"/>
        <property name="key" value="true"/>
    </slot>
    <slot name="discussed" layout="null-as-label" key="label.thesis.evaluate.discussion.date">
        <property name="label" value="label.thesis.field.empty"/>
        <property name="key" value="true"/>
    </slot>
</schema>

<schema name="coordinator.thesis.file" type="net.sourceforge.fenixedu.domain.thesis.ThesisFile">
    <slot name="uploadTime" key="label.thesis.file.name.uploadTime"/>
    <slot name="displayName" layout="link" key="label.thesis.file.name">
        <property name="useParent" value="true"/>
        <property name="linkFormat" value="${downloadUrl}"/>
    </slot>
</schema>

<schema name="coordinator.thesis.evaluate" type="net.sourceforge.fenixedu.domain.thesis.Thesis">
    <slot name="mark" key="label.thesis.evaluate.mark">
        <validator class="net.sourceforge.fenixedu.presentationTier.renderers.validators.GradeValidator">
            <property name="required" value="true"/>
        </validator>
    </slot>
    <slot name="discussed" key="label.thesis.evaluate.discussion.date" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.DateTimeValidator">
        <validator class="net.sourceforge.fenixedu.presentationTier.renderers.validators.DateTimeValidator">
            <property name="required" value="true"/>
        </validator>
    </slot>
    <setter signature="confirm(mark, discussed)"/>
</schema>

<schema name="coordinator.thesis.revision.view" type="net.sourceforge.fenixedu.domain.thesis.Thesis">
    <slot name="mark" key="label.thesis.evaluate.mark"/>
    <slot name="discussed" key="label.thesis.evaluate.discussion.date"/>
</schema>

<schema name="coordinator.thesis.state" type="net.sourceforge.fenixedu.domain.thesis.Thesis">
    <slot name="state" key="label.thesis.state"/>
    <slot name="valid" key="label.thesis.valid">
        <property name="trueLabel" value="label.coordinator.thesis.valid.true"/>
        <property name="falseLabel" value="label.coordinator.thesis.valid.false"/>
    </slot>
</schema>

<schema name="coordinator.thesis.state.submitted" type="net.sourceforge.fenixedu.domain.thesis.Thesis">
    <slot name="state" key="label.thesis.state"/>
</schema>

<schema name="coordinator.coordination.team.thesis" type="net.sourceforge.fenixedu.domain.Coordinator">
    <slot name="person.nickname" read-only="true" key="label.coordinator.name"/>
    <slot name="thesisCoordinator" key="label.coordinator.coordination.team.member"/>
</schema>

<schema name="coordinator.thesis.table" type="net.sourceforge.fenixedu.presentationTier.Action.coordinator.thesis.StudentThesisInfo">
    <slot name="student.number" key="label.student.number.short"/>
    <slot name="student.person.name" key="student"/>
    <slot name="title" key="label.coordinator.title" layout="short">
        <property name="length" value="60"/>
    </slot>
    <slot name="state" key="label.thesis.state"/>
</schema>