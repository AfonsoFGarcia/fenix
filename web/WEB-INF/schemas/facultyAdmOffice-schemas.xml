<schema name="search.grants.contract.dateInterval" type="net.sourceforge.fenixedu.dataTransferObject.grant.export.GrantSearch">
	<slot name="datesTypeChoice" key="label.grant.searchChoice" layout="radio-postback"> 
		<property name="destination" value="datesTypeChoicePostBack"/>
		<property name="classes" value="nobullet liinline"/>
	</slot>
	<slot name="beginDate" key="label.grant.betweenDate"> 
		<validator class="pt.ist.fenixWebFramework.renderers.validators.DateValidator">
		<property name="format" value="dd/MM/yyyy"/>
