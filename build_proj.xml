<?xml version="1.0" encoding="ISO-8859-1"?>
<project basedir="." default="compile-proj" name="">

	<property environment="env"/>
	<property name="encoding" value="ISO-8859-1"/>	
	<property file="build.properties"/>
	<property name="lib" location="lib" />
	<property name="sql" location="etc"/>
	<property name="build.home" location="build"/>
    <property name="src" location="src"/>
    <property name="config" location="config"/>
	
	<property name="build.standalone" value="${build.home}/standalone/${app.name}"/>
	<property name="build.standalone.webinf" value="${build.standalone}/WEB-INF"/>
	<property name="build.standalone.webinf.classes" value="${build.standalone.webinf}/classes"/>
	<property name="build.standalone.webinf.libs" value="${build.standalone.webinf}/lib"/>

	<!-- <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->
	<!-- <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->
	<!-- <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->

	<target name="compile-proj">
		<ant antfile="build.xml" target="compile-proj"/>
	</target>
	
	<!-- <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->
	<!-- <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->
	<!-- <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->

	<target name="run-projecto" depends="compile-proj">
		<java classname="UtilTests.Aplicacao" fork="yes"
			failonerror="false">
			<classpath>
				<pathelement path="${build.standalone.webinf.classes}"/>
				<fileset dir="${lib}">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

</project>