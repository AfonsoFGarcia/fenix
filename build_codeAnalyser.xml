<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="check-duplicate-code" name="Code Analysis Tools">

	<taskdef resource="simiantask.properties" classpath="simian.jar"/>

    <property environment="env"/>
	<property name="encoding" value="UTF-8"/>	

    <property name="src" location="src"/>
    <property name="src_tools" location="src_tools"/>
	<property name="src_tests" location="src_tests"/>


	<target name="check-duplicate-code"
			description="Checks source for duplicate code">
		<simian threshold="10">
			<fileset dir="./src" includes="**/*.java"/>
			<fileset dir="./src_tools" includes="**/*.java"/>
			<fileset dir="./src_tests" includes="**/*.java"/>
			<formatter type="plain" toFile="simian-log.txt"/>
		</simian>
	</target>

</project>
