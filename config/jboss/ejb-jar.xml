<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE ejb-jar PUBLIC       
	  "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
      "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>

	<description>
		Generic deployment information for the Service Manager Session Bean
	</description>
	<display-name>Service Manager Session Bean</display-name>

	<enterprise-beans>
		<session>
			<ejb-name>ServiceManager</ejb-name>
			<home>ServidorAplicacao.ServiceManagerHome</home>
			<remote>ServidorAplicacao.ServiceManager</remote>
			<ejb-class>ServidorAplicacao.ServiceManagerBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
	</enterprise-beans>

	<assembly-descriptor>
		<container-transaction>
			<method>
				<ejb-name>ServiceManager</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
	</assembly-descriptor>

</ejb-jar>