<!-- Definitions for Dominio.Tests -->
<!-- ***************************** -->
<class-descriptor class="Dominio.Test"
                  table="TESTS">
    <field-descriptor id="1"
        name="idInternal"
        column="ID_INTERNAL"
        jdbc-type="INTEGER"
        primarykey="true"
        autoincrement="true"
    />
    <field-descriptor id="2"
         name="title"
         column="TITLE"
    	 jdbc-type="CLOB"
         conversion="ServidorPersistente.Conversores.Clob2StringFieldConversion"
    />
    <field-descriptor id="3"
         name="information"
         column="INFORMATION"
    	 jdbc-type="CLOB"
         conversion="ServidorPersistente.Conversores.Clob2StringFieldConversion"
    />
    <field-descriptor id="4"
         name="numberOfQuestions"
         column="NUMBER_OF_QUESTIONS"
    	 jdbc-type="INTEGER"
    />
    <field-descriptor id="5"
        name="creationDate"
        column="CREATION_DATE"
        jdbc-type="TIMESTAMP"
        conversion="ServidorPersistente.Conversores.TimeStamp2DateFieldConversion"
	/>
	<field-descriptor id="6"
        name="lastModifiedDate"
        column="LAST_MODIFICATION_DATE"
        jdbc-type="TIMESTAMP"
        conversion="ServidorPersistente.Conversores.TimeStamp2DateFieldConversion"
	/>
    <field-descriptor id="7"
        name="keyExecutionCourse"
        column="KEY_EXECUTION_COURSE"
        jdbc-type="INTEGER"
	/>
	<reference-descriptor
         name="executionCourse"
         class-ref="Dominio.DisciplinaExecucao"
         proxy="true"
    > 
	<foreignkey field-id-ref="7"/>
	</reference-descriptor>
    <attribute
		attribute-name="cacheable"
     	attribute-value="false" />
</class-descriptor>

