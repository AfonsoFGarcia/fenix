<!-- ******************************** -->
<!-- Definitions for Dominio.Metadata -->
<!-- ******************************** -->
<class-descriptor class="Dominio.Metadata"
                  table="METADATA">
    <field-descriptor id="1"
        name="idInternal"
        column="ID_INTERNAL"
        jdbc-type="INTEGER"
        primarykey="true"
        autoincrement="true"
    />
    <field-descriptor id="2"
        name="keyExecutionCourse"
        column="KEY_EXECUTION_COURSE"
        jdbc-type="INTEGER"
	/>
    <field-descriptor id="3"
         name="metadataFile"
         column="METADATA_FILE"
    	 jdbc-type="CLOB"
         conversion="ServidorPersistente.Conversores.Clob2StringFieldConversion"/>
    <reference-descriptor
         name="executionCourse"
         class-ref="Dominio.DisciplinaExecucao"
         proxy="true"
    >
	<foreignkey field-id-ref="2"/>
	</reference-descriptor>
</class-descriptor>

