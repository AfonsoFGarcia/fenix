<class-descriptor class="net.sourceforge.fenixedu.domain.research.Researcher" 
	table="RESEARCHER">
	
	<field-descriptor
         name="idInternal"
         column="ID_INTERNAL"
         jdbc-type="INTEGER"
         primarykey="true"
         autoincrement="true"
	/>	
    <field-descriptor
	   name="keyPerson"    
	   column="KEY_PERSON"  
	   jdbc-type="INTEGER"
    />

