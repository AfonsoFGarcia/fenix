<class-descriptor class="net.sourceforge.fenixedu.domain.research.project.Project"
	table="PROJECT">
	
	<field-descriptor
		name="idInternal"
		column="ID_INTERNAL"
		jdbc-type="INTEGER"
		primarykey="true"
		autoincrement="true"
	/>
	
	<field-descriptor
		name="title"
		column="TITLE"
		jdbc-type="LONGVARCHAR"
		conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.MultiLanguageString2SqlMultiLanguageStringConversion"
	/>
	
	<field-descriptor
		name="abstract"
		column="ABSTRACT"
		jdbc-type="LONGVARCHAR"
		conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.MultiLanguageString2SqlMultiLanguageStringConversion"
	/>
	
	<field-descriptor
		name="startDate"
		column="START_DATE"
		jdbc-type="VARCHAR"
		conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.JavaYearMonth2SqlStringFieldConversion"
	/>
	
	<field-descriptor
		name="endDate"
		column="END_DATE"
		jdbc-type="VARCHAR"
		conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.JavaYearMonth2SqlStringFieldConversion"
	/>
	
	<field-descriptor
	   name="projectType"    
	   column="PROJECT_TYPE"  
	   jdbc-type="VARCHAR"
	   conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.ProjectType2SqlProjectTypeConversion"
    /> 
	
	<collection-descriptor proxy="true" auto-retrieve="false" collection-class="org.apache.ojb.broker.util.collections.ManageableVector"
         	name="projectParticipations"
         	element-class-ref="net.sourceforge.fenixedu.domain.research.project.ProjectParticipation">
         <inverse-foreignkey field-ref="keyType"/>
    </collection-descriptor>
	
</class-descriptor>

<class-descriptor class="net.sourceforge.fenixedu.domain.research.event.Event" table="RESEARCH_EVENT">
	
	<field-descriptor
         name="idInternal"
         column="ID_INTERNAL"
         jdbc-type="INTEGER"
         primarykey="true"
         autoincrement="true"
	/>
	
	<field-descriptor
		name="name"
		column="NAME"
		jdbc-type="LONGVARCHAR"
		conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.MultiLanguageString2SqlMultiLanguageStringConversion"
	/>
	
	<field-descriptor
		name="startDate"
		column="START_DATE"
		jdbc-type="VARCHAR"
		conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.JavaYearMonthDay2SqlStringFieldConversion"
	/>
	
	<field-descriptor
		name="endDate"
		column="END_DATE"
		jdbc-type="VARCHAR"
		conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.JavaYearMonthDay2SqlStringFieldConversion"
	/>
	
	<field-descriptor
		name="location"
		column="LOCATION"
		jdbc-type="VARCHAR"
	/>

	<field-descriptor
		name="feeOrFree"
		column="FEE_OR_FREE"
		jdbc-type="INTEGER"
	/>
	
	<field-descriptor 
	   name="type"    
	   column="TYPE"  
	   jdbc-type="VARCHAR"
	   conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.ResearchEventType2SqlResearchEventTypeConversion"
    />

	<collection-descriptor proxy="true" auto-retrieve="false" collection-class="org.apache.ojb.broker.util.collections.ManageableVector"
			name="projects"
			element-class-ref="net.sourceforge.fenixedu.domain.research.project.Project"
			indirection-table="PROJECT_EVENT"
			>
		<fk-pointing-to-this-class column="KEY_EVENT"/>
		<fk-pointing-to-element-class column="KEY_PROJECT"/>
	</collection-descriptor>
</class-descriptor>


<class-descriptor class="net.sourceforge.fenixedu.domain.research.project.ProjectParticipation"
	table="PROJECT_PARTICIPATION">
	
	<field-descriptor
		name="idInternal"
		column="ID_INTERNAL"
		jdbc-type="INTEGER"
		primarykey="true"
		autoincrement="true"
	/>
	
	<field-descriptor
		name="keyProject" 
		column="KEY_PROJECT"
		jdbc-type="INTEGER"
	/>
	
	<field-descriptor
		name="keyParty" 
		column="KEY_PARTY"
		jdbc-type="INTEGER"
	/>
	
	<field-descriptor
	   name="role"    
	   column="PROJECT_TYPE"  
	   jdbc-type="VARCHAR"
	   conversion="net.sourceforge.fenixedu.persistenceTier.Conversores.ProjectParticipationType2SqlProjectParticipationTypeConversion"
    /> 
    
    <reference-descriptor auto-retrieve="false" 
		name="project"
		class-ref="net.sourceforge.fenixedu.domain.research.project.Project"
		>
	    <foreignkey field-ref="keyProject"/>
    </reference-descriptor>

    <reference-descriptor auto-retrieve="false" 
		name="party"
		class-ref="net.sourceforge.fenixedu.domain.organizationalStructure.Party"
		>
	    <foreignkey field-ref="keyParty"/>
    </reference-descriptor>
	
</class-descriptor>


