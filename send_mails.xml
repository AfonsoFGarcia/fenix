<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="send-mails" name="Compilation Scripts">

<property name="lib" value="lib"/>
<property name="classes" value="build/WEB-INF/classes"/>

	<target name="send-mails"
	                description="Sends queued mails">
		<echo message="${lib}"/>
		<java classname="net.sourceforge.fenixedu.infrastructuralTier.MailSender" fork="true" failonerror="true" maxmemory="1024m">
		<classpath>
			<pathelement path="${classes}"/>
        	        <fileset dir="${lib}">
                		    <include name="**/*.jar"/>
	                </fileset>
		</classpath>
		</java>
	</target>
</project>

