	</target>

	<target name="validate-xml">
		<xmlvalidate warn="false">
				<fileset dir="${webapp.metadata}" includes="**/*.xml **/*.tld">
					<exclude name="**/repository*.xml"/>
					<exclude name="**/validator-rules.xml"/>
					<exclude name="**/fenix-validator-rules.xml"/>					
				</fileset>
		</xmlvalidate>
	</target>
