<?xml version="1.0" encoding="ISO-8859-1"?>
<project basedir="." default="compile-proj" name="Fenix Build File">

    <target name="clean-all"
    		description="Removes any generated files">
		<ant antfile="build_jboss.xml" target="clean-all"/>
    </target>

    <target name="prepare"
    		description="Copy configuration files to compile dir">
		<ant antfile="build_jboss.xml" target="prepare-standalone"/>
    </target>

    <target name="install"
    		description="Deploys application to web server">
		<ant antfile="build_jboss.xml" target="deploy-standalone"/>
    </target>

    <target name="reload"
    		description="Deploys application to web server">
    	<ant antfile="build_jboss.xml" target="compile-standalone"/>
		<ant antfile="build_tomcat.xml" target="reload"/>
    </target>

    <target name="remove"
    		description="Deploys application to web server">
		<ant antfile="build_tomcat.xml" target="remove"/>
    </target>

    <target name="deploy-webapp"
    		description="Deploys application to web server">
    	<property file="build.properties" />
		<ant antfile="build_jboss.xml" target="clean-all"/> 
		<ant antfile="build_jboss.xml" target="compile-standalone"/>
    	<ant antfile="build_jboss.xml" target="includeJ2EEjar"/>
		<mkdir dir="deploy"/>
		<zip destfile="deploy/${app.name}.war" basedir="build/standalone"/>
    </target>


    <target name="compile-proj"
    		description="Compiles standalone application">
		<ant antfile="build_jboss.xml" target="compile-standalone"/>
    </target>

</project>